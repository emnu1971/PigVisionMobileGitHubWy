<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PigVisionMobile.Core.Views.Test.ShowLogoView">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="_image" 
               HorizontalOptions="Center"
               WidthRequest="100"
               HeightRequest="100"
               />
            <Label Text="Welcome to Xamarin Forms Show Logo View!" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>